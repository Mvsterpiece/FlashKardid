<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FlashKardid.Views.DeckListPage">
    <ContentPage.Content>
        <StackLayout>
            <ListView ItemsSource="{Binding Decks}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout>
                                <Label Text="{Binding Name}" />
                                <Label Text="{Binding Description}" />
                                <Label Text="{Binding Difficulty}" />
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Button Text="Add Deck" Command="{Binding AddDeckCommand}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>