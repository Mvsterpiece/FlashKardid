<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FlashKardid.Views.Words">
    <StackLayout>
        <Label Text="Sõnad" FontSize="Large" HorizontalTextAlignment="Center"/>
        <Button Text="Lisa uue sõna" />
        <ListView x:Name="WordListView" ItemsSource="{Binding Words}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Word}" Detail="{Binding Translation}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>