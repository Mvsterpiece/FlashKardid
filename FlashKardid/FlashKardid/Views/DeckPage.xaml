<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FlashKardid.Views.DeckPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="{Binding Deck.Name}" />
            <ListView ItemsSource="{Binding Deck.Words}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout>
                                <Label Text="{Binding Name}" />
                                <Label Text="{Binding Description}" />
                                <Label Text="{Binding Difficulty}" />
                                <Label Text="{Binding IsMastered}" />
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Button Text="Add Word" Command="{Binding AddWordCommand}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>